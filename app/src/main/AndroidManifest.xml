<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.mjeorrett.android.pingpongscorer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".AddPlayerActivity"
            android:parentActivityName=".PlayerListActivity"/>

        <activity
            android:name=".ViewPlayerActivity"
            android:parentActivityName=".PlayerListActivity"/>

        <activity
            android:name=".PlayerListActivity"
            android:parentActivityName=".HomeActivity"/>

        <activity
            android:name=".AddGameActivity"/>

    </application>

</manifest>